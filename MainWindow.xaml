<Window x:Class="KinectCV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="kinect_cv" Height="688" Width="412"
        Loaded="Window_Loaded" Closing="Window_Closing"
        >
    <Grid>

        <DockPanel>
            
        <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" >
            <StatusBarItem Padding="0 0 0 10">
                <TextBlock Name="statusBarText" Margin="-1 0 0 0"></TextBlock>
            </StatusBarItem>
        </StatusBar>
            <StackPanel Orientation="Vertical" Background="Black">
                <Image Name ="MaskedColor"/>
                <Image Name ="DepthImage"/>
            </StackPanel>

        </DockPanel>
    </Grid>
</Window>
